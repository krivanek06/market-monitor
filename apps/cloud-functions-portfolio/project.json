{
  "name": "cloud-functions-portfolio",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cloud-functions-portfolio/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@simondotm/nx-firebase:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/cloud-functions-portfolio",
        "main": "apps/cloud-functions-portfolio/src/index.ts",
        "tsConfig": "apps/cloud-functions-portfolio/tsconfig.app.json",
        "packageJson": "apps/cloud-functions-portfolio/package.json",
        "assets": []
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run cloud-functions-portfolio:build && nx watch --projects=cloud-functions-portfolio --includeDependentProjects -- nx build cloud-functions-portfolio --clean=false",
          "nx run cloud-functions-portfolio:emulate"
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/cloud-functions-portfolio/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/cloud-functions-portfolio/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "firebase deploy --config firebase.cloud-functions-portfolio.json"
      }
    },
    "getconfig": {
      "executor": "nx:run-commands",
      "options": {
        "command": "firebase functions:config:get --config firebase.cloud-functions-portfolio.json > apps/cloud-functions-portfolio/.runtimeconfig.json"
      }
    },
    "emulate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node -e \"setTimeout(()=>{},5000)\"",
          "kill-port --port 9099,5001,8080,9000,5000,8085,9199,9299,4000,4400,4500",
          "firebase functions:config:get  --config firebase.cloud-functions-portfolio.json > dist/apps/cloud-functions-portfolio/.runtimeconfig.json",
          "firebase emulators:start  --config firebase.cloud-functions-portfolio.json"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
