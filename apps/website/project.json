{
  "name": "website",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/website/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "qwik-nx:build",
      "options": {
        "runSequence": ["website:build.client", "website:build.ssr"],
        "outputPath": "dist/apps/website"
      },
      "configurations": {
        "emptyOutDir": {
          "outputPath": "dist/apps/website"
        }
      }
    },
    "build.client": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/website",
        "configFile": "apps/website/vite.config.mts"
      }
    },
    "build.ssr": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/website",
        "configFile": "apps/website/adapters/cloudflare-pages/vite.config.mts"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "jestConfig": "apps/website/jest.config.ts"
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "website:build.client",
        "mode": "ssr",
        "port": 5173
      }
    },
    "serve.debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --inspect-brk ../../node_modules/vite/bin/vite.js --mode ssr --force",
        "cwd": "apps/website"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/website/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "deploy-production-preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "CLOUDFLARE_API_TOKEN=sGcAnkvEVxuEG3UY4j5jsPZzg5AkW49NeUuNOtYN CLOUDFLARE_ACCOUNT_ID=f1df8b715072f0acab628276164c0494 wrangler pages deploy ./dist/apps/website --branch production --project-name=\"ggfinance-website\""
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "CLOUDFLARE_API_TOKEN=sGcAnkvEVxuEG3UY4j5jsPZzg5AkW49NeUuNOtYN CLOUDFLARE_ACCOUNT_ID=f1df8b715072f0acab628276164c0494 wrangler pages deploy ./dist/apps/website --branch main --project-name=\"ggfinance-website\""
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "wrangler pages dev dist/apps/website"
      }
    }
  }
}
