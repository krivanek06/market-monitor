{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome Debugger",
        "url": "http://localhost:4200",
        "webRoot": "${workspaceFolder}",
        "presentation": {
          "hidden": true
        }
      },
      {
        "command": "yarn mm:serve",
        "name": "Debug Market Monitor",
        "cwd": "${workspaceFolder}",
        "request": "launch",
        "type": "node-terminal",
        "serverReadyAction": {
          "action": "startDebugging",
          "name": "Launch Chrome Debugger",
          "pattern": "listening on localhost:4200"
        }
      },
      {
        "command": "yarn mmd:serve",
        "name": "Debug Dashboard",
        "cwd": "${workspaceFolder}",
        "request": "launch",
        "type": "node-terminal",
        "serverReadyAction": {
          "action": "startDebugging",
          "name": "Launch Chrome Debugger",
          "pattern": "listening on localhost:4200"
        }
      }
    ]
  }
