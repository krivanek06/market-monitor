{
  "hosting": [
    {
      "target": "market-monitor-prod",
      "public": "./dist/apps/market-monitor/browser",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "function": "ssr"
        }
      ]
    }
  ],
  "functions": [
    {
      "source": "dist/apps/cloud-functions",
      "codebase": "cloud-functions",
      "runtime": "nodejs18",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"]
    },
    {
      "source": "dist/apps/cloud-functions-portfolio",
      "codebase": "cloud-functions-portfolio",
      "runtime": "nodejs18",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log"]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "singleProjectMode": true
  }
}
