{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@market-monitor/api-client": [
        "libs/api/api-client/src/index.ts"
      ],
      "@market-monitor/api-external": [
        "libs/api/api-external/src/index.ts"
      ],
      "@market-monitor/api-types": [
        "libs/api/api-types/src/index.ts"
      ],
      "@market-monitor/modules/market-general": [
        "libs/modules/market-general/src/index.ts"
      ],
      "@market-monitor/modules/market-stocks": [
        "libs/modules/market-stocks/src/index.ts"
      ],
      "@market-monitor/modules/page-builder": [
        "libs/modules/page-builder/src/index.ts"
      ],
      "@market-monitor/modules/portfolio": [
        "libs/modules/portfolio/src/index.ts"
      ],
      "@market-monitor/modules/user": [
        "libs/modules/user/src/index.ts"
      ],
      "@market-monitor/shared-components": [
        "libs/shared/components/src/index.ts"
      ],
      "@market-monitor/shared-directives": [
        "libs/shared/directives/src/index.ts"
      ],
      "@market-monitor/shared-pipes": [
        "libs/shared/pipes/src/index.ts"
      ],
      "@market-monitor/shared-services": [
        "libs/shared/services/src/index.ts"
      ],
      "@market-monitor/shared-utils-client": [
        "libs/shared/utils-client/src/index.ts"
      ],
      "@market-monitor/shared-utils-general": [
        "libs/shared/utils-general/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
