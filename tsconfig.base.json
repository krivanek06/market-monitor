{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "util": [ "./node_modules/util/" ],
      "assert": [ "./node_modules/assert/" ],
      "https": [ "./node_modules/https-browserify" ],
      "http": [ "./node_modules/stream-http" ],
      "querystring": [ "./node_modules/querystring-es3" ],
      "stream": [ "./node_modules/stream-browserify" ],
      "url/": [ "./node_modules/url/" ],
      "crypto": [ "./node_modules/crypto-browserify" ],
      "zlib": [ "./node_modules/browserify-zlib" ],
      "path": [ "./node_modules/path-browserify" ],
      "os": [ "./node_modules/os-browserify/browser" ],
      "@market-monitor/api-cloud-functions": ["libs/api/api-cloud-functions/src/index.ts"],
      "@market-monitor/api-external": ["libs/api/api-external/src/index.ts"],
      "@market-monitor/api-firebase": ["libs/api/api-firebase/src/index.ts"],
      "@market-monitor/api-types": ["libs/api/api-types/src/index.ts"],
      "@market-monitor/modules/market-general": ["libs/modules/market-general/src/index.ts"],
      "@market-monitor/modules/market-stocks": ["libs/modules/market-stocks/src/index.ts"],
      "@market-monitor/shared-components": ["libs/shared/components/src/index.ts"],
      "@market-monitor/shared-directives": ["libs/shared/directives/src/index.ts"],
      "@market-monitor/shared-pipes": ["libs/shared/pipes/src/index.ts"],
      "@market-monitor/shared-services": ["libs/shared/services/src/index.ts"],
      "@market-monitor/shared-utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
