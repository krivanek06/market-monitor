{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@market-monitor/api-cloud-functions": ["libs/api/api-cloud-functions/src/index.ts"],
      "@market-monitor/api-external": ["libs/api/api-external/src/index.ts"],
      "@market-monitor/api-firebase": ["libs/api/api-firebase/src/index.ts"],
      "@market-monitor/api-types": ["libs/api/api-types/src/index.ts"],
      "@market-monitor/components": ["libs/components/src/index.ts"],
      "@market-monitor/directives": ["libs/directives/src/index.ts"],
      "@market-monitor/modules/stock-visualization": ["libs/modules/stock-visualization/src/index.ts"],
      "@market-monitor/pipes": ["libs/pipes/src/index.ts"],
      "@market-monitor/services": ["libs/services/src/index.ts"],
      "@market-monitor/shared-types": ["libs/shared-types/src/index.ts"],
      "@market-monitor/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
